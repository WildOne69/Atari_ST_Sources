IMPLEMENTATION MODULE BoolWordOps;

(* (C) Robert Tolksdorf fuer ST-Computer, 8/90 *)

FROM SYSTEM IMPORT WORD, VAL;

PROCEDURE And(a,b:WORD):WORD;
BEGIN
  RETURN VAL(BITSET,a)*VAL(BITSET,b)
END And;

PROCEDURE Or(a,b:WORD):WORD;
BEGIN
  RETURN VAL(BITSET,a)+VAL(BITSET,b)
END Or;

PROCEDURE Xor(a,b:WORD):WORD;
BEGIN
  RETURN VAL(BITSET,a)/VAL(BITSET,b)
END Xor;

PROCEDURE Not(a:WORD):WORD;
BEGIN
  RETURN VAL(BITSET,a)/{0..15}
END Not;

PROCEDURE Imp(a,b:WORD):WORD;
BEGIN
  RETURN (VAL(BITSET,a)-VAL(BITSET,b))/{0..15}
END Imp;

PROCEDURE Nand(a,b:WORD):WORD;
BEGIN
  RETURN (VAL(BITSET,a)*VAL(BITSET,b))/{0..15}
END Nand;

PROCEDURE Nor(a,b:WORD):WORD;
BEGIN
  RETURN (VAL(BITSET,a)+VAL(BITSET,b))/{0..15}
END Nor;

PROCEDURE Nimp(a,b:WORD):WORD;
BEGIN
  RETURN VAL(BITSET,a)-VAL(BITSET,b)
END Nimp;

END BoolWordOps.

