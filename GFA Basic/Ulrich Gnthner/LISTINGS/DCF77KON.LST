fl_esc!=FALSE
SELECT XBIOS(4)
CASE 0
  e&=185
  ez&=320
CASE 1
  e&=185
  ez&=640
CASE 2
  e&=385
  ez&=640
ENDSELECT
STICK 1
DO
  CLS
  FOR i&=5 TO e& STEP 40
    FOR k&=1 TO ez&
      IF STICK(1)=0
        PLOT k&,i&
      ELSE
        LINE k&,i&,k&,i&+10
      ENDIF
      PAUSE 1
      IF ASC(INKEY$)=27
        STICK 0
        EDIT
      ENDIF
    NEXT k&
  NEXT i&
LOOP
