' Testprogramm 3
'
' Demonstration von $U+ in Interruptroutinen
' ------------------------------------------
' Erzeugt kleines Chaos auf dem Bildschirm
' und lÑût Fehlerbehandlung ins Abseits laufen.
' Mit den Tasten <i> und <d> kann die Bearbeitungs-
' zeit der Interruptprozedur geÑndert werden,
' beim Selbstaufruf von rupt erfolgt automatisch
' eine VerkÅrzung.
'
$U+,$I+
$P>
'
ON ERROR GOSUB errproc
EVERY 5 GOSUB rupt
'
l%=2
schleife
END
'
PROCEDURE schleife
  DO
    t$=UPPER$(INKEY$)
    SELECT t$
    CASE ""
      ' nichts weltbewegendes
    CASE "E"
      PAUSE 10  !damit rupt bearbeitet wird
      ERROR 1
    CASE "X"
      EXIT IF TRUE
    CASE "I"
      l%=SUCC(l%)
      PRINT
      PRINT "I ";l%
    CASE "D"
      l%=MAX(PRED(l%),1)
      PRINT
      PRINT "D ";l%
    DEFAULT
      EVERY STOP
      PRINT
      PRINT "E: Fehler erzeugen"
      PRINT "I: EVERY PROC verlÑngern"
      PRINT "D: EVERY PROC verkÅrzen"
      PRINT "X: Programmende"
      EVERY  CONT
    ENDSELECT
  LOOP
RETURN
'
$U+
PROCEDURE rupt
  DEC l%    ! Bearbeitungszeit kÅrzer
  PAUSE l%
  ' hier wird EVERY-Bedingung geprÅft,
  ' und lange Pausen ergeben: erfÅllt !!!
  PRINT " A";
  ' aber auch hier ...
  PRINT l%;
  INC l%    ! wieder normal
RETURN
PRINT
PRINT "Guten Morgen"
END
'
$U-
PROCEDURE errproc
  ALERT 1,"Fehler "+STR$(ERR)+"|aufgetreten",1,"res next",e&
  ON ERROR GOSUB errproc
  RESUME NEXT
RETURN
