* PROCEDURE L_ORTE

* CLOSE ALL
* SELE FM
* USE ORTE INDEX ORTE 
* SELE FJ
* USE LESER INDEX ORTE1 

SELE FJ
ERASE
* SCHLšSSEL ORTE1.NDX = TRIM($(ORT,5,LEN(TRIM(ORT))
* SCHLšSSEL  ORTE.NDX = STR(ORT,3,0)+TRIM(NAME)
* ORT SUCHEN
Y.ORT = '     '
@ 1,5 SAY 'WELCHER ORT' GET Y.ORT PICT '!LLLL'
READ
ERASE
FIND FM TRIM(Y.ORT)
IF .NOT. EOF(FM)
    SELE FM
    * Auswahl des Ortes
    DISP OFF WHILE $(M.ORT,6,LEN(TRIM(Y.ORT))) = TRIM(Y.ORT) M.ORT
    FIND FJ STR(RECNO(FM),3,0)
    IF FOUND(FJ)
       ERASE
       SELE FJ
       * Kopfzeile
       ? 'WOHNORT '+D_ORTE->ORT,'VORWAHL:'+D_ORTE->VORW
       ?
       LIST OFF WHILE J.ORT = RECNO(FM) !(NAME)-' '+VNAME,'TEL.: '+TEL  
       WAIT 
    ENDIF
ENDIF
ERASE 
RETURN

