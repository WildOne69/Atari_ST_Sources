#include <stdio.h>
#include <stdlib.h>

main()
{
  int *DynVektor;
  int i;

  DynVektor = (int *) calloc(3,sizeof(int));
  if (DynVektor > NULL)
  {
    /* Werte berechnen */
    for (i=0;i<3;DynVektor[i]=1+i++);

    for (i=0;i<3;i++)
    printf("\nDynVektor[%d] = %d\n",i,DynVektor[i]);

    free(DynVektor);
  }
  getchar();

  /* Sonst meckert TC.PRG nach Programmende. */
  return 0;
}

